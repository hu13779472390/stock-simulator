<Window x:Class="StockSimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="MainWindow" Height="800" Width="800"
				Icon="favicon.ico">
	
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<xctk:PropertyGrid x:Name="_propertyGrid" Width="Auto" Margin="10,10,10,100"
                                    AutoGenerateProperties="True">
		</xctk:PropertyGrid>
		<Button x:Name="_runButton" Content="Run Simulation" Margin="10,0,10,10" VerticalAlignment="Bottom" Height="30" Click="_runButton_Click"/>
		<Label x:Name="_statusLabel" Content="Idle" HorizontalAlignment="Left" Margin="10,0,0,50" VerticalAlignment="Bottom" FontSize="20"/>

	</Grid>

</Window>
